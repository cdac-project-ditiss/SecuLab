alert tcp any any -> 192.168.100.121 80 (flags:S; msg:"SYN Flood Detected"; flow:stateless; detection_filter: track by_dst, count 70, seconds 10; sid:11002; rev:1;)

# 11. SYN-ACK Flood Detection
alert tcp 192.168.100.121 80 -> any any (flags:SA; msg:"SYN-ACK Flood Detected"; flow:stateless; detection_filter: track by_src, count 50, seconds 10; sid:11003; rev:1;)

