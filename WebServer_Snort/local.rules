alert tcp any any -> 192.168.100.121 80 (msg:"HTTP Flood detected - possible DoS"; threshold:type threshold, track by_src, count 50, seconds 20; sid:1010; rev:1;)

# 9. MACOF Flooding
alert ip any any -> 192.168.100.121 any (msg:"MACOF flooding detected - possible ARP flood"; detection_filter: track by_src, count 3000, seconds 1; sid:11001; rev:1;)

